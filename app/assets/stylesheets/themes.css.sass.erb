@charset "utf-8"

/* Themes */
body
<% %w(default test).each do |theme| %>
  &.theme_<%= theme %>
    background-image: url(<%= asset_path "bg/#{theme}.jpg" %>)
    .piece
<% %w(fu ky ke gi ki ka hi ou to ny nk ng um ry).each do |role| %>
<% { dn: 'downward', up: 'upward' }.each do |key, direction| %>
      &.role_<%= role %>.<%= direction %>
        $piece_image: url(<%= asset_path "pieces/#{theme}/#{key}_#{role}.png" %>)
        background-image: $piece_image
<% end %>
<% end %>
    .board
      background-image: url(<%= asset_path "boards/#{theme}/l.jpg" %>)
      @media (max-width: 767px)
        background-image: url(<%= asset_path "boards/#{theme}/s.jpg" %>)
      @media (max-height: 767px)
        background-image: url(<%= asset_path "boards/#{theme}/s.jpg" %>)
<% end %>
