%p
  - if user_signed_in?
    = link_to page_name('home', 'mypage'), root_path
    = link_to page_name('help', 'index'), help_path
  - else
    = link_to page_name('home', 'top'), root_path
  = link_to Feedback.model_name.human, feedbacks_path
  %br.hidden-desktop
  = link_to page_name('about', 'tos'), about_tos_path
  = link_to page_name('about', 'privacy'), about_privacy_path
  - about_us_url = Sengine.system.site[:about_us_url]
  - if about_us_url
    = link_to page_name('about', 'us'), about_us_url, class: :out, target: :_blank
  %span#credit= t('site.copyright')
