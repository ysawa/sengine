<%- content = render 'comments/comment', comment: @comment %>
$('ul#comments').prepend('<%= escape_javascript content %>');
$('ul#comments li:first-child').effect('highlight', {}, 1500);
<%- form = render 'comments/form', comment: Comment.new(game: @game) %>
$('form.edit_comment').replaceWith('<%= escape_javascript form %>');
