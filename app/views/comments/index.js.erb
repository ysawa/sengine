<%- comment_contents = '' %>
<%- @comments.each do |comment| %>
  <%- comment_contents += render 'comments/comment', comment: comment %>
<%- end %>

$('#comments').append('<%= escape_javascript(comment_contents.html_safe) %>');

<%- comments_pagination = render 'comments/pagination', comments: @comments %>
$('nav.next_comment').replaceWith('<%= escape_javascript(comments_pagination) %>');
