- decorator = CommentDecorator.new comment
- game = comment.commentable
- if defined?(with_commentable) && with_commentable && game
  - game_decorator = GameDecorator.new game
  - name = t('actions.watch_model', model: Game.model_name.human)
  - commentable_link = link_to name, game
- else
  - commentable_link = nil
- unless defined?(insert_time)
  - insert_time = nil
%li.comment{ 'comment-id' => comment.id, 'data-insert-time' => insert_time }
  .comment_info
    = decorator.author_image true
    .comment_content
      = decorator.content
      %br
      = decorator.created_at
      - if commentable_link
        %span.comment_game
          .visible-phone
            \(#{commentable_link})
  - if commentable_link
    .comment_game.hidden-phone
      = commentable_link
