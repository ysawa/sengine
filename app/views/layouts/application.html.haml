!!!
%html
  %head
    %title
      - if @subtitle
        = @subtitle
        \|
      Shogi Engine
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header#global_head
      .inner
        = render 'common/global_head'
    %section#global_body
      .inner{ 'data-pjax-container' => true }
        = yield
    %footer#global_foot
      .inner
        = render 'common/global_foot'
    = render 'common/notice'
