- decorator = UserDecorator.new(user)
- image_tag = decorator.image(false, class: 'face large img-polaroid')
#user_profile
  = link_to image_tag, decorator.facebook_url, target: "_blank", id: :user_face
  %dl
    %dt
      = User.human_attribute_name('name')
    %dd
      = decorator.name
      = decorator.grade

    %dt
      = User.human_attribute_name('score')
    %dd
      = decorator.score
    %dt
      = t('user.games.result')
    %dd
      = t('user.games.win_loss', win: decorator.won_games_count, loss: decorator.lost_games_count)
