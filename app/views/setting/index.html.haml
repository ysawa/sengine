.common_container#setting_container
  %h2= @subtitle
  - if user_signed_in? && current_user.facebook_id
    %p
      = image_tag "http://graph.facebook.com/#{current_user.facebook_id}/picture?type=square"
    %p
      = current_user.name
    %p
      = current_user.gender
    %p
      = current_user.locale
    %p
      = current_user.timezone
