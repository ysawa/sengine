#comments_set
  %h3
    %i.icon-comment
    = Comment.model_name.human
  - if user_signed_in?
    = render 'comments/form', comment: Comment.new(game: game)
  = render 'comments/comments', game: game, with_pagination: true, pagination_params: { controller: :comments, action: :index, game_id: game.id }
