.common_container#game_page
  - if @subtitle.is_a? Array
    - subtitle = @subtitle[1]
  - else
    - subtitle = @subtitle
  %h2<
    %i.icon-book
    = subtitle
  .row
    .span3
      %ul.nav.nav-tabs.nav-stacked
        - %w(playing mine friends).each do |page|
          %li{ class: (page == action_name ? 'active' : nil) }
            - name = t("pages.controllers.games.#{page}")
            - href = { controller: 'games', action: page }
            = link_to name, href
    .span9
      = render 'games/games', games: @games, show_not_found: true, with_pagination: true
