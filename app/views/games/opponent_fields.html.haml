= fields_for :game do |f|
  - @friends.each_with_index do |user, i|
    - user_decorator = UserDecorator.new(user)
    - user_id = user.id.to_s
    %li.slide
      %a{ class: :face, href: '#' }
        - title = user_decorator.name_with_grade
        = user_decorator.face(false, { 'user-id' => user_id, title: title, alt: title })
