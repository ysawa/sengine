.common_container#session_page
  %h2= t('helpers.submit.send_me_reset_password_instructions')
  - html_options = { id: :edit_user, class: %w(edit_user validated form-horizontal), method: :post }
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: html_options) do |f|
    = devise_error_messages!
    %section.control-group
      = f.label :email, nil, class: 'control-label'
      %section.controls
        = f.email_field :email
    %section.control-group
      %section.controls
        = f.submit t('helpers.submit.send_me_reset_password_instructions')
  = render partial: "devise/shared/links"
