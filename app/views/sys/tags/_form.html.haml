= form_for tag_element do |f|
  %section.control-group
    = f.label :code, nil, class: 'control-label'
    %section.controls
      = f.text_field :code, class: :required
  %section.control-group
    = f.label :name, nil, class: 'control-label'
    %section.controls
      = f.text_field :name, class: :required
  %section.control-group
    = f.label :content, nil, class: 'control-label'
    %section.controls
      = f.text_area :content, class: :required
  %section.control-group
    %section.controls
      = f.submit t('helpers.submit.save'), class: 'btn btn-primary'
